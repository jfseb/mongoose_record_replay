{
    "compilerOptions": {
       // "target": "es6",
       "skipLibCheck": true, // avoid lodash WeakMap mismatch
       "target": "es2015",
       // "module" : "es6", //'es2015
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
      //  "jsx": "react",
       // "watch" : true,
        // new ^^
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": false,
        "noLib": false,
        "outDir" : "js",
       // "sourceMap" : true,
        "inlineSourceMap": true,
        "preserveConstEnums": true,
         //"jsx": "react",
        "suppressImplicitAnyIndexErrors": true
 //       "types" : ["node", "core-js"]
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "files": [
        "src/index.ts",
        "src/mgrecrep.ts"
    ],
    "exclude": [
//  "!node_modules/**"
    ]
}